{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "NodeNext",
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "jsx": "react-jsx",
    },
    "include": [
      "src/**/*"
    ]
}